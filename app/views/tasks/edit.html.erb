<h2 class="border-bottom p-3">Update your Task</h2>
<div class="row">
  <%= form_with model: @task do |f| %>
    <div class="col align-self-start p-2">
    <%= f.label :title %>
    <%= f.text_field :title %>
    </div>
    <div class="col align-self-start p-2">
    <%= f.label :details %>
    <%= f.text_field :details %>
    </div>
    <div class="col align-self-start p-2">
    <%= f.label :completed %>
    <%= f.check_box :completed %>
    </div>
    <%= f.submit %>
  <% end %>
</div>

<p class="m-3">
  <%= link_to task_path(@task), class:"rounded bg-primary bg-opacity-25 p-2 shadow-sm" do%>
    <i class="fa-solid fa-arrow-rotate-left"></i> Back to list
  <% end %>
</p>

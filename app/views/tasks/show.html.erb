<h2 class="border-bottom p-3"><%= @task.title %></h2>
<p class="bg-secondary bg-opacity-25 p-3 shadow-sm"><%= @task.details %></p>
<p><input type="checkbox" name="task"><%= @task.completed %></p>

<p>
  <%= link_to edit_task_path(@task), class:"rounded bg-primary bg-opacity-25 p-2 shadow-sm" do %>
    <i class="fa-solid fa-pencil"></i> Edit
  <% end %>
</p>

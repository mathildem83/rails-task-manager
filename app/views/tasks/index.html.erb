<h2 class="border-bottom p-3">My task</h2>
<ul>
  <% @tasks.each do |task| %>
    <li class="d-flex border-bottom">
      <input type="checkbox" name="task" <%= "checked" if task.completed %>>
      <div class="p-3">
      <%= link_to task.title, task_path(task)%>
      <%= link_to task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
        <i class="fa-solid fa-trash-can ps-3"></i>
      <% end %>
      </div>
    </li>
  <% end %>
</ul>

<p class="ps-3">
  <%= link_to new_task_path, class:"rounded bg-primary bg-opacity-25 p-1 shadow-sm" do %>
    <i class="fa fa-plus c"></i> New Task
  <% end %>
</p>
